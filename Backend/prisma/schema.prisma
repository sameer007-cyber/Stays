generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  clerkId  String  @unique
  name     String
  email    String? @unique
  password String

  listings Listing[]
  reviews  Review[]
  likes    Like[]

  createdAt DateTime @default(now())

  @@map("users")
}

model Listing {
  id          String   @id @default(uuid())
  title       String
  description String?
  price       Int
  location    String?
  country     String?
  imageUrl    String?
  ownerId     String

  latitude    Float?
  longitude   Float?

  owner   User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  reviews Review[]
  likes   Like[]

  createdAt DateTime @default(now())
}


model Review {
  id        String  @id @default(uuid())
  rating    Int
  comment   String?
  userId    String
  listingId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  listing Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@map("reviews")
}

model Like {
  id        String @id @default(uuid())
  userId    String
  listingId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  listing Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, listingId])
  @@map("likes")
}
